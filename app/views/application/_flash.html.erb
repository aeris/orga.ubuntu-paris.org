<div id="flash" class="container">
	<% [:danger, :warning, :success, :info].each do |level|
	   message = flash[level]
	   unless message.nil? %>
			<%= content_tag :div, class: %(alert alert-#{level} fade in) do %>
				<%= button_tag 'x', type: 'button', class: 'close', data: {dismiss: 'alert'} %>
				<% if message.is_a? Enumerable %>
					<ul>
					<% message.each do |m| %>
						<li><%= m %></li>
					<% end %>
					</ul>
				<% else %>
					<%= message %>
				<% end %>
			<% end
		end
	end %>
</div>
